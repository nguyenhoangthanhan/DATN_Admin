<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorGrayeee"
    android:padding="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textColor="@color/colorGray222"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="abcdefghiklm"
                android:textColor="@color/colorGray444"
                android:textSize="@dimen/_12sdp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/full_name"
                android:textColor="@color/colorGray222"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Nguyễn Văn A"
                android:textColor="@color/colorGray444"
                android:textSize="@dimen/_12sdp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone"
                android:textColor="@color/colorGray222"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/txtPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="0123456789"
                android:textColor="@color/colorGray444"
                android:textSize="@dimen/_12sdp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginBottom="@dimen/_3sdp"
                android:id="@+id/txtView"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/blue3F51B5"
                android:background="@drawable/bg_blue_3f51b5"
                android:padding="@dimen/_2sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem" />


            <TextView
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:id="@+id/txtAcceptAdmin"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/blue3F51B5"
                android:background="@drawable/bg_blue_3f51b5"
                android:padding="@dimen/_2sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cấp quyền" />

            <TextView
                android:visibility="gone"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:id="@+id/txtRemoveAdmin"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/red_050"
                android:background="@drawable/bg_red_050"
                android:padding="@dimen/_2sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hủy quyền" />

        </LinearLayout>


        <TextView
            android:layout_marginBottom="@dimen/_3sdp"
            android:id="@+id/txtEditPass"
            android:textSize="@dimen/_8sdp"
            android:textColor="@color/blue3F51B5"
            android:background="@drawable/bg_blue_3f51b5"
            android:padding="@dimen/_2sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_pass" />

        <TextView
            android:layout_marginBottom="@dimen/_3sdp"
            android:textSize="@dimen/_8sdp"
            android:textColor="@color/blue3F51B5"
            android:background="@drawable/bg_blue_3f51b5"
            android:padding="@dimen/_2sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:id="@+id/txtEditPrivateInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_private_info" />
    </LinearLayout>
</LinearLayout>