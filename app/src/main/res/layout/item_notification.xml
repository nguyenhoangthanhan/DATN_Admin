<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="@dimen/_5sdp"
    android:id="@+id/item_notify_relative"
    android:background="#eee"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/viewInfoNotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <TextView
        android:textStyle="bold"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black"
        android:id="@+id/txtTittleNotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Khuyến mãi hot mùa dịch Covi 19" />

    <TextView
        android:textSize="12.5sp"
        android:layout_below="@id/txtTittleNotify"
        android:textColor="@color/colorGray444"
        android:id="@+id/txtContentNotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Giảm 15% các mặt hàng điện tử, giảm 5% sản phẩm
        camera probest 7.4XT, tặng tai nghe khi mua điện thoại Samsung galaxy S9" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/view_edit_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgViewNotify"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:src="@drawable/ic_eye" />

        <ImageView
            android:id="@+id/imgEditNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_7sdp"
            android:src="@drawable/ic_baseline_edit_24" />

        <ImageView
            android:id="@+id/imgDeleteNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_7sdp"
            android:src="@drawable/ic_baseline_delete_24" />


    </LinearLayout>
</LinearLayout>