<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorGrayeee"
    android:padding="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginBottom="@dimen/_3sdp"
            android:id="@+id/txtNameRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhà hàng cầy tơ bắc bộ"
            android:textColor="@color/colorGray111"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:layout_marginBottom="@dimen/_3sdp"
            android:id="@+id/txtPhoneRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01470258036"
            android:textColor="@color/colorGray444"
            android:textSize="@dimen/_10sdp" />

        <TextView

            android:id="@+id/txtAddressRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="số 1 khương thượng, khương đình, đống đa, hà nội"
            android:textColor="@color/colorGray444"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>


    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginBottom="@dimen/_3sdp"
                android:id="@+id/txtView"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/blue3F51B5"
                android:background="@drawable/bg_blue_3f51b5"
                android:padding="@dimen/_2sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem" />


        </LinearLayout>


        <TextView
            android:layout_marginBottom="@dimen/_3sdp"
            android:id="@+id/txtEditPass"
            android:textSize="@dimen/_8sdp"
            android:textColor="@color/blue3F51B5"
            android:background="@drawable/bg_blue_3f51b5"
            android:padding="@dimen/_2sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_pass" />

        <TextView
            android:layout_marginBottom="@dimen/_3sdp"
            android:textSize="@dimen/_8sdp"
            android:textColor="@color/blue3F51B5"
            android:background="@drawable/bg_blue_3f51b5"
            android:padding="@dimen/_2sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:id="@+id/txtEditInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_info" />
    </LinearLayout>
</LinearLayout>